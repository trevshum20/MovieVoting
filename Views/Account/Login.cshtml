@{
    Layout = null;
}

@model LoginModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Movie Voting Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <p>&nbsp</p>
    <h1 class="text-center" style="font-family: papyrus;">Movie Voting Admin Login</h1>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    <form method="post" asp-controller="Account" asp-action="Login">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input id="form1Example13" asp-for="Username" class="form-control form-control-lg" />
                            <label class="form-label" for="form1Example13" asp-for="Username">User Name</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example23" asp-for="Password" class="form-control form-control-lg" />
                            <label class="form-label" for="form1Example23" asp-for="Password">Password</label>
                        </div>

                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <!-- Checkbox -->
                            <input type="hidden" asp-for="ReturnUrl" />
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-block" style="background-color: red;" >Cancel</a>

                    </form>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
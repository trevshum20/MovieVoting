@{
    ViewData["Title"] = "Add a Movie |";
}
@model MovieVoting.Models.Movie
<div>
    <br />
    <h1 style="text-align: center; font-size: 70px; font-family: papyrus;"><b>Add a Movie!</b></h1>
    <fieldset>
        <form method="post">
            <table style="text-align: center">
                <tr>
                    <td><label asp-for="Title">Title:</label></td>
                    <td><input asp-for="Title" id="title" required/></td>
                </tr>

                <tr>
                    <td><label asp-for="Length">Length (minutes):</label></td>
                    <td><input asp-for="Length" required/></td>
                </tr>
                <br />
                <br />
            </table>
            <label asp-for="Category">Category:</label>
            <select asp-for="CategoryId" required>
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }

            </select>

            <input type="hidden" asp-for="Voting" value="true" />

            <br /><br />
            <input type="submit" value="Submit" />
            <div asp-validation-summary="All"></div>
        </form>
    </fieldset>
</div>
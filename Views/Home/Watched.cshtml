@{
}

@model List<Movie>

<h1 style="text-align: center; font-size: 70px; font-family: papyrus;"><b>Watched Movies</b></h1>

<table class="table table-sm table-striped ">
    <thead class="thead-dark">
        <tr>
            <td></td>
            @*<td></td>*@
            <td style="font-size: 23px;">Title</td>
            <td style="font-size: 23px;">Category</td>
            <td style="font-size: 23px;">Length (minutes)</td>
            <td style="font-size: 23px;">Watched</td>
            <td style="font-size: 23px;">Date Last Watched</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>
                    <form method="post" asp-action="MoveToVote" asp-route-movieid="@m.MovieId"><button class="btn btn-small btn-success" type="submit" value="Submit">Move to Vote</button></form>
                </td>
                <td>@m.Title</td>
                <td>@m.Category.CategoryName</td>
                <td>@m.Length</td>
                <td>@m.Watched</td>
                <td>@m.DateWatched</td>
                <td>
                    <form method="post" asp-action="WantWatch" asp-route-movieid="@m.MovieId"><button class="btn btn-small btn-danger" type="submit" value="Submit">Not Watched</button></form>
                </td>
            </tr>

        }

    </tbody>


</table>

<br />
<br />
<form method="get">
    <button type="submit" class="btn btn-small btn-info" asp-action="AddMovie">Add A Movie</button>
</form>